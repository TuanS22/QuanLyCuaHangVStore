@using System.Globalization @*thư viện sử dụng để format sang tiền vnđ*@

@{
    Layout = "~/Views/Shared/LayoutHome.cshtml";
}

<div style="padding: 10px;"></div>
<div style="width: 600px; margin: auto; font-family: sans-serif; border-radius: 6px; border: 1px solid rgb(188, 188, 188); box-shadow: 0px 0px 8px gray;">
    <div style="display: flex; justify-content: center; align-items: center; background-color: #00BFFF; border-bottom: 1px solid gray; border-radius: 6px 6px 0 0;">
        <div>
            <figure style="width: 110px; height: auto; margin: 0;">
                <img style="width: 100%; height: auto; object-fit: cover;" src="https://cdn.glitch.global/a37e1b3c-a1c7-4024-8563-4ef0d1d9a7e4/Vstore.png?v=1717144018951" alt="V Store" title="V Store">
            </figure>
        </div>
        <div>
            <figure style="width: 150px; height: auto;">
                <img style="width: 100%; height: auto;" src="https://cdn.glitch.global/a37e1b3c-a1c7-4024-8563-4ef0d1d9a7e4/vnpay.png?v=1717144367079" alt="VnPay" title="VnPay">
            </figure>
        </div>
    </div>
    <div>
        <div style="width: 500px; margin: auto; text-align: center;">
            <figure style="width: 100%; height: auto; margin: 0;">
                <img style="width: 80px; height: auto; margin-top: 40px;" src="https://cdn.glitch.global/a37e1b3c-a1c7-4024-8563-4ef0d1d9a7e4/tick.png?v=1717146016867" alt="Thanh toán thành công" title="Thanh toán thành công">
            </figure>
            <h3 style="color: blue; font-weight: bold; font-size: 24px; margin: 15px 0 10px 0px;">Thanh toán thành công</h3>
            <p style="margin: 10px 0 15px 0; font-size: 16px;">Cảm ơn quý khách V Store đã sử dụng thanh toán VnPay</p>
        </div>
        <div style="width: 400px; margin: auto; background-color: rgb(232, 232, 232); padding: 10px; border-radius: 6px;">
            <table style="width: 100%;">
                <tbody>
                    <tr>
                        <td style="padding: 5px;">Mã giao dịch:</td>
                        <td style="font-weight: bold;">@ViewBag.TransactionId</td>
                    </tr>
                    <tr>
                        <td style="padding: 5px;">Mã đơn hàng:</td>
                        <td style="font-weight: bold;">@ViewBag.OrderId</td>
                    </tr>
                    <tr>
                        <td style="padding: 5px;">Tổng tiền:</td>
                        <td style="font-weight: bold;">
                            @{
                                decimal discountedPrice = Convert.ToInt32(ViewBag.Amount);
                                string formatedDiscountedPrice = discountedPrice.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"));
                            }
                            @formatedDiscountedPrice
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 5px;">Loại thẻ:</td>
                        <td style="font-weight: bold;">@ViewBag.BankCode</td>
                    </tr>
                    <tr>
                        <td style="padding: 5px;">Thời gian giao dịch:</td>
                        <td style="font-weight: bold;">@ViewBag.CreatedTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div style="margin: 15px;"></div>
        <div style="width: 260px; margin: auto; text-align: center; background-color: #00BFFF; border-radius: 6px;">
            <a href="../Products/Categories" style="display: block; text-decoration: none; color: black; font-weight: bold; padding: 10px 5px;">
                Tiếp tục mua sắm với VnPay
            </a>
        </div>
    </div>
    <div style="display: flex; justify-content: space-around; align-items: center; border-top: 1px solid gray; margin-top: 30px; padding: 15px 0;">
        <div>
            <img style="width: 25px; height: 25px;" src="https://cdn.glitch.global/a37e1b3c-a1c7-4024-8563-4ef0d1d9a7e4/phone.png?v=1717146651815" alt="" title="Liên hệ qua số điện thoại" />
            <a href="#" style="color: blue;">1900.5555.77</a>
        </div>
        <div>
            <img style="width: 25px; height: 25px;" src="https://cdn.glitch.global/a37e1b3c-a1c7-4024-8563-4ef0d1d9a7e4/email.png?v=1717146653284" alt="" title="Liên hệ qua email" />
            <a href="#" style="color: blue;">hotrovnpay@vnpay.vn</a>
        </div>
        <div>
            <img style="width: 35px; height: auto;" src="https://cdn.glitch.global/a37e1b3c-a1c7-4024-8563-4ef0d1d9a7e4/VNPAY-QR.png?v=1717146959208" alt="VnPay" title="VnPay" />
        </div>
    </div>
</div>